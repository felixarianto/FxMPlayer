<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/seek_total"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryLight"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        />


    <RelativeLayout
        android:id="@+id/seek_pos_sc"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:background="@drawable/selector_circle_transparent_white">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_accent"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/seek_pos_ec"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="100dp"
        android:background="@drawable/selector_circle_transparent_white"
        >

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle_accent"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <View
        android:id="@+id/seek_value"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginLeft="150dp"
        android:layout_centerVertical="true"/>

    <View
        android:id="@+id/seek_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:layout_marginLeft="-12dp"
        android:layout_toRightOf="@id/seek_pos_sc"
        android:layout_alignRight="@id/seek_value"
        android:layout_centerVertical="true"/>


</RelativeLayout>