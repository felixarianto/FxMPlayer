<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#455357">

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:background="?android:windowBackground"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:itemIconTint="@color/selector_tab_color"
        app:itemTextColor="@color/selector_tab_color"
        app:menu="@menu/navigation" />

    <RelativeLayout
        android:id="@+id/body"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.v7.widget.SearchView
            android:id="@+id/scvw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/round_white"
            app:defaultQueryHint="Search..."
            app:iconifiedByDefault="false">

        </android.support.v7.widget.SearchView>


        <RelativeLayout
            android:id="@+id/rvly_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@id/scvw"
            android:background="@drawable/round_white_transparent"
            android:padding="16dp"
            >

            <android.support.v7.widget.CardView
                android:id="@+id/card_thumb"
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardCornerRadius="40dp"
                android:layout_centerHorizontal="true"
                app:cardBackgroundColor="@color/colorPrimary"
                android:layout_margin="8dp"
                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:textSize="24sp"
                android:text="Abdurrahman Al Ausyi"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/card_thumb"
                android:layout_centerHorizontal="true"
                android:layout_margin="8dp"
                android:fadingEdgeLength="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:fontFamily="cursive"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/seek"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/rvly_info"
            android:layout_margin="8dp">

            <RelativeLayout
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginBottom="8dp">

                <View
                    android:id="@+id/seek_total"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorPrimaryLight"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    />

                <View
                    android:id="@+id/seek_pos_sc"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/circle_accent"
                    android:layout_marginLeft="0dp"
                    android:layout_centerVertical="true"/>

                <View
                    android:id="@+id/seek_pos_ec"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/circle_accent"
                    android:layout_centerVertical="true"/>

                <View
                    android:id="@+id/seek_line"
                    android:layout_width="0dp"
                    android:layout_height="2dp"
                    android:background="@color/colorAccent"
                    android:layout_alignLeft="@+id/seek_pos_sc"
                    android:layout_marginLeft="5dp"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/seek_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seek_bar"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:text="00:00"/>

            <TextView
                android:id="@+id/seek_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seek_bar"
                android:layout_alignRight="@+id/seek_bar"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:text="00:00"/>

            <ImageButton
                android:id="@+id/btn_play_pause"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_below="@+id/seek_start"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:src="@drawable/selector_btn_play_pause"
                android:scaleType="fitCenter"
                android:tint="#FFFFFFFF"/>

            <ImageButton
                android:id="@+id/btn_next"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="8dp"
                android:layout_alignTop="@+id/btn_play_pause"
                android:layout_toRightOf="@+id/btn_play_pause"
                android:layout_marginLeft="52dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_skip_next_black_24dp"
                android:scaleType="fitCenter"
                android:tint="@color/selector_button_text_color"/>

            <ImageButton
                android:id="@+id/btn_previous"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="8dp"
                android:layout_alignTop="@+id/btn_play_pause"
                android:layout_toLeftOf="@+id/btn_play_pause"
                android:layout_marginRight="52dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_skip_previous_black_24dp"
                android:scaleType="fitCenter"
                android:tint="@color/selector_button_text_color"/>

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/lnly_list"
            android:layout_below="@+id/seek"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp"
            android:background="@drawable/top_round_white_transparent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_round_white_transparent"
                android:backgroundTint="@color/colorPrimary">
                
                <Button
                    android:id="@+id/btn_add"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:text="+"
                    android:textSize="28sp"
                    android:textAlignment="center"
                    android:padding="0dp"
                    android:textColor="@color/selector_button_text_color"
                    android:background="@android:color/transparent"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rcvw_track"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                />

        </LinearLayout>

    </RelativeLayout>


</android.support.constraint.ConstraintLayout>