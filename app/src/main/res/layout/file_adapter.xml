<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rly_separator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_separator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A"
            android:textStyle="bold"
            android:textSize="@dimen/text_title_size"
            android:paddingBottom="12dp"
            android:paddingLeft="8dp"
            android:textColor="@color/text_secondary"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rly_content"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp">

        <android.support.v7.widget.CardView
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="2dp"
            app:cardElevation="0dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#C2C2C2"
                >

                <ImageView
                    android:id="@+id/img_album"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/radial_shading"/>

                <TextView
                    android:id="@+id/txt_section_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 Sections"
                    android:textSize="@dimen/text_content_size"
                    android:textColor="@color/grey_50"
                    android:padding="6dp"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <RelativeLayout
            android:id="@+id/rly_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#E80667"
            android:padding="6dp">

            <TextView
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="Al Qiyamah - Madin Ver"
                android:textSize="@dimen/text_content_size"
                android:textStyle="bold"
                android:textColor="@color/grey_50"
                android:maxLines="2"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/txt_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="04:00"
                android:textSize="@dimen/text_content_size"
                android:textColor="@color/grey_50"
                android:layout_below="@id/txt_title"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/txt_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/txt_duration"
                android:padding="2dp"
                android:text="Al Ausyi"
                android:textSize="@dimen/text_content_size"
                android:textColor="@color/grey_50"
                android:layout_below="@id/txt_title"
                android:ellipsize="marquee"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>